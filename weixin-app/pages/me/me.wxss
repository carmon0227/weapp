/* pages/me/me.wxss */
.header{
    box-sizing: border-box;
    width:100%;
    height:350rpx;
    background:#62c3d3;
    /* display: flex;
    justify-content: space-between;
    align-items: center; */
    padding:40rpx;
    color:#fff;
}
.subHeader{
    display: flex;
    justify-content: space-around;
    margin-top:50rpx;
}
.header-item{
    display: flex;
    justify-content: space-between;
    flex-direction: column;
    font-size: 13px;
    text-align: center;
    align-items: center;
    height:100rpx;
}
.header-item image{
    width:60rpx;
    height:60rpx;
}
.userinfo{
    font-size: 18px;
    font-weight: bold;
    display: flex;
    justify-content: center;
    align-items: center;
}
.userinfo text{
    margin-left:20rpx;
}
.avatar{
    width:130rpx;
    height:130rpx;
    border-radius: 50%;
    overflow: hidden;
    border:5rpx solid #fff;
}
.avatar image{
    width:100%;
    height:100%;
}
.service{
    box-sizing: border-box;
    width:100%;
    height:200rpx;
    display: flex;
    justify-content: space-around;
    align-items: center;
    border-bottom: 1px solid #ddd;
}
.service-cell{
    display: flex;
    justify-content: space-between;
    flex-direction: column;
    text-align: center;
    align-items: center;
    height:100rpx;
    font-size: 12px;
    color:#535353;
}
.service-cell image{
    width:50rpx;
    height:50rpx;
}