/* pages/shopcart/shopcart.wxss */
page{
    background: #F9F8F8;
    position:relative;
}
.empty{
    width:100%;
    text-align: center;
    font-size: 15px;
    position:absolute;
    top:0;
    z-index: 10;
}
.empty view{
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    margin:auto;
    margin-top:250rpx;
    color:#2c2c2c;
    font-weight: bold;
}
.empty image{
    width:200rpx;
    height:200rpx;
    margin-bottom:50rpx;
}

.pro{
    margin-bottom:100rpx;
}
.pro-item{
    background: #fff;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom:1px solid #ddd;
    padding:20rpx;
    /* position:absolute;
    top:0;
    z-index:10; */
}
.item-icon{
    width:35rpx;
    height:35rpx;
}
.item-icon image{
    width:100%;
    height:100%;
}
.item-msg{
    display: flex;
    justify-content: space-between;
    width:92%;
}
.msg{
    display: flex;
    justify-content: start;
    width:70%;
}
.msg1{
    border:1px solid #ddd;
}
.msg2{
    display: flex;
    justify-content: space-between;
    flex-direction: column;
    font-size: 14px;
    margin-left:20rpx;
}
.msg image{
    width:150rpx;
    height:150rpx;
}

.controls{
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top:100rpx;
}
.controls input{
    width:60rpx;
    text-align: center;
    font-size: 13px;
}
.controls image{
    width:40rpx;
    height:40rpx;
}
.footer{
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: #fff;
    position: fixed;
    bottom:0;
    width:100%;
    box-sizing: border-box;
    font-size: 14px;
    padding-left:20rpx;
    z-index: 30;
}
.sel-cell{
    display: flex;
    justify-content: space-between;
    align-items: center;
    width:30%;
}
.sel-cell-item{
    display: flex;
    justify-content: space-between;
    align-items: center;
    width:45%;
}
.pay{
    background:#62c3d3;
    padding:25rpx 80rpx;
    color:#fff;
    font-size: 16px;
}
.del{
    color:#62c3d3;
}
.total text{
    color:#62c3d3;
    font-size: 16px;
}
