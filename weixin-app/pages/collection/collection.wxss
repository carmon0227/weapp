/* pages/collection/collection.wxss */
page{
    position:relative;
}
.empty{
    width:100%;
    text-align: center;
    font-size: 15px;
    position:absolute;
    top:0;
    z-index: 10;
}
.collection{
    margin-bottom:10rpx;
}
.collection-item{
    box-sizing: border-box;
    display: flex;
    justify-content: start;
    /* padding-right:20rpx; */
    width:100%;
}
.item-msg{
    border-bottom:1px solid #ddd;
    padding:20rpx 20rpx 20rpx 0;
    width:100%;
    font-size: 14px;
    font-weight: bold;
    margin-left:20rpx;
}
.item-price{
    color:#62c3d3;
    margin-top:90rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.item-img{
    border:1px solid #ddd;
}
.item-img image{
    width:200rpx;
    height:200rpx;
}
.item-price image{
    width:40rpx;
    height:40rpx;
}
.more-item{
    display: flex;
    justify-content: space-around;
    align-items: center;
    padding:10rpx 50rpx;
    font-size: 13px;
    color:#62c3d3;
}
.item{
    width:30%;
    display: flex;
    justify-content: center;
    align-items: center;
}
.divider{
    height:50rpx;
    border-left: 1px solid #ddd;
}
.more-item image{
    width:45rpx;
    height:45rpx;
    margin-right:10rpx;
}