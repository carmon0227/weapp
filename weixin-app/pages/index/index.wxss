/**index.wxss**/
.index input{
    border-radius: 50rpx;
    background:#F9F8F8;
    width:80%;
    font-size: 12px;
    padding:0 20rpx;
    margin:0 auto;
    /* text-align: center; */
}
.swiper{
    margin:20rpx 0 0;
}
.swiper image{
    width:100%;
    height:100%;
}
.cell{
    display:flex;
    justify-content: space-between;
    align-items: center;
    padding:20rpx;
    font-size: 14px;
}
.cell-showmore{
    display:flex;
    justify-content: center;
    align-items: center;
    font-size: 12px;
    color:#858585;
}
.cell-showmore::after{
    content:"";
    width:15rpx;
    height:15rpx;
    border-top:3rpx solid #858585;
    border-right:3rpx solid #858585;
    transform:rotate(45deg);
}
.scroll-view{
    /* border:1px solid red; */
    padding:20rpx 0 20rpx 0;
    background:#F9F8F8;
    display: flex;
    justify-content: start;
    /* flex-direction: row; */
    /* flex-flow: nowrap; */
    white-space: nowrap;
}
.scroll-view-item{
    /* border:1px solid blue; */
    display: inline-block;
    width:300rpx;
    flex-direction: column;
    margin-left:20rpx;
    background: #fff;
}
.scroll-view-item image{
    width:100%;
    height:300rpx;
}
.item-text{
    display: flex;
    flex-direction: column;
    font-size: 13px;
    padding:15rpx;
}
.index-image image{
    width:100%;
}